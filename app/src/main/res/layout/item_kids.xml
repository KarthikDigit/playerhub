<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_16sdp"
    android:gravity="center|start"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/kid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/_100sdp"
        android:text="Ligori Mani "
        android:textSize="@dimen/_12ssp" />

    <RadioGroup
        android:id="@+id/kid_yes_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/_12sdp"
        android:background="@drawable/btn_select_bg"
        android:elevation="@dimen/_4sdp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/kid_yes"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_btn_track1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="YES"
            android:textColor="@color/checker_track" />

        <RadioButton
            android:id="@+id/kid_no"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_btn_track"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="NO"
            android:textColor="@color/checker_track" />


    </RadioGroup>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/_8sdp"
    android:paddingBottom="@dimen/_8sdp">

    <TextView
        android:id="@+id/kid_name"
        fontPath="fonts/poppins_medium.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:minWidth="@dimen/_100sdp"
        android:text="Ligori Mani "
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp" />

    <RadioGroup
        android:id="@+id/kid_yes_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/_12sdp"
        android:background="@drawable/btn_select_bg"
        android:elevation="@dimen/_4sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_2sdp">

        <RadioButton
            android:id="@+id/kid_yes"
            fontPath="fonts/poppins_medium.ttf"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_btn_track1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="YES"
            android:textColor="@color/checker_track"
            android:textSize="@dimen/_12ssp" />

        <RadioButton
            android:id="@+id/kid_no"
            fontPath="fonts/poppins_medium.ttf"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_btn_track"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="NO"
            android:textColor="@color/checker_track"
            android:textSize="@dimen/_12ssp" />


    </RadioGroup>

</FrameLayout>